                </Button.ContextMenu>
            </Button>
            <!--Option             <Button x:Name="btnOption" Click="btnOption_Click">OPTIONS</Button> -->
            <Button x:Name="btnOption" Click="btnOption_Click">OPTIONS</Button>
            <!--Disconnect-->
            <Button x:Name="btnDisconnect" Click="btnDisconnect_Click" Content="DISCONNECT"/>
